<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:id="@+id/imgForYou"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvDiscountForYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/orange"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textSize="10dp"
            android:text="%%%%5"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvNameForYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@+id/imgForYou"
            android:maxLines="2"
            android:textSize="24dp"
            tools:text="Unknown" />
        <TextView
            android:id="@+id/tvPriceForYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:layout_below="@+id/tvNameForYou"
            android:textStyle="bold"
            android:textSize="20dp"
            tools:text="Unknown" />
        <TextView
            android:id="@+id/tvPriceDiscountForYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_50"
            android:layout_below="@+id/tvPriceForYou"
            android:textSize="20dp"
            tools:text="Unknown" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>